{
  "name": "enablement-map-studio",
  "version": "0.1.0",
  "private": true,
  "description": "A unified web application for designing end-to-end processes from customer experience to outcome creation",
  "keywords": [
    "enablement",
    "customer-journey-map",
    "service-blueprint",
    "visualization",
    "react",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/suwa-sh/enablement-map-studio"
  },
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter studio dev",
    "build": "pnpm -r build",
    "lint": "qlty check",
    "format": "qlty fmt",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "type-check": "tsc --noEmit",
    "check": "pnpm format && pnpm type-check && pnpm lint && pnpm test:run"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.11.5",
    "playwright": "^1.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "use-undo": "^1.1.1"
  }
}
